{% extends 'base.html.twig' %}

{% block title %}Brainstorm{% endblock %}

{% block body %}
<div class="flex flex-1">
    <!-- Sidebar: Liste des Chatrooms -->
    <div class="w-1/4 bg-white shadow-md">
        <div class="p-4">
            <h2 class="font-bold text-xl mb-4">Chatrooms</h2>
            {% if chatrooms is defined and chatrooms is not empty %}
                <ul class="space-y-2">
                    {% for chatroom in chatrooms %}
                        <li>
                            <a href="{{ path('chat_home', { chatroom: chatroom.id }) }}"
                               class="block p-2 rounded {{ activeChatroom is defined and activeChatroom.id == chatroom.id ? 'bg-blue-500 text-white' : 'bg-gray-200 hover:bg-gray-300' }}">
                                {{ chatroom.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucune chatroom disponible.</p>
            {% endif %}
        </div>
    </div>

    <!-- Main Chat Area -->
    <div class="w-3/4 bg-gray-50 flex flex-col">
        {% if activeChatroom is defined and activeChatroom %}
        <!-- Messages -->
        <div class="flex-1 p-4 space-y-4 overflow-y-auto">
            {% for message in messages %}
            <div class="flex {{ message.user == user ? 'justify-end' : 'justify-start' }} items-center space-x-4">
                {% if message.user != user %}
                <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center">
                    {{ message.user.email|slice(0, 2)|upper }}
                </div>
                {% endif %}
                <div class="bg-gray-200 p-4 rounded w-3/4">
                    <p class="font-bold">{{ message.user.email }}</p>
                    <p>{{ message.content }}</p>
                </div>
                {% if message.user == user %}
                <div class="w-12 h-12 bg-blue-300 rounded-full flex items-center justify-center">
                    {{ user.email|slice(0, 2)|upper }}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>

        <!-- Input Area -->
        <div class="p-4 bg-white border-t">
            <form action="{{ path('send_message', { chatroom: activeChatroom.id }) }}" method="post" class="flex w-full space-x-2">
                <input 
                    type="text" 
                    name="content"
                    placeholder="Veuillez écrire votre message" 
                    class="flex-grow border border-gray-300 rounded px-4 py-2"
                />
                <button 
                    type="submit"
                    class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                    Envoyer
                </button>
            </form>
        </div>
        {% else %}
        <p class="p-4 text-center">Aucune chatroom sélectionnée.</p>
        {% endif %}
     </div>
 </div>
{% endblock %}
