{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-h-screen bg-background flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
            <h1 class="text-2xl font-bold text-primary mb-8">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="mb-6">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'style': 'border: 2px solid black; border-radius: 5px; padding: 10px; width: 100%;'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'style': 'border: 2px solid black; border-radius: 5px; padding: 10px; width: 100%;'}}) }}
                </div>

                <div class="mb-6 flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'style': 'margin-right: 8px;'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'Accepter les termes de services', {'label_attr': {'class': 'text-sm text-gray-700'}}) }}
                </div>
                <button type="submit" class="w-full bg-primary text-white py-3 px-4 rounded hover:bg-tertiary transition duration-300">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
